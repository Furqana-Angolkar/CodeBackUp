<!--            android:layout_width="match_parent"-->
<!--            android:layout_marginStart="65dp"-->
<!--            android:layout_height="0.7dp"-->
<!--            android:background="#BDBDBD"-->
<!--            android:layout_marginLeft="70dp"-->
